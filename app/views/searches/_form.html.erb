
<%= button_to "delete all searches", { action: "delete_all" }, remote: true %>
<div class="container">

  <div class="jumbotron">

    <div class="row">
      <div class="col-lg-6">


          <%= form_for(@search) do |f| %>
              <% if @search.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@search.errors.count, "error") %> prohibited this search from being saved:</h2>

                    <ul>
                      <% @search.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div class="actions">
                <%= search_field(:keywords, nil, size: 50) %>
                <%= f.submit "Search" %>
              </div>
          <% end %>

      </div>
    </div>

  </div>
</div>
